{
  "name": "FL 1-click Wiki",
  "description": "Open corresponding 'Fallen London Wiki' page with one click!",
  "version": "1.10.0",
  "manifest_version": 2,
  "permissions": [
    "https://fallenlondon.wiki/w/api.php"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.fallenlondon.com/*"
      ],
      "css": [
        "extension.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "/images/fl-wiki-icon-16.png",
      "32": "/images/fl-wiki-icon-32.png",
      "48": "/images/fl-wiki-icon-48.png",
      "128": "/images/fl-wiki-icon-128.png"
    }
  },
  "icons": {
    "16": "/images/fl-wiki-icon-16.png",
    "32": "/images/fl-wiki-icon-32.png",
    "48": "/images/fl-wiki-icon-48.png",
    "128": "/images/fl-wiki-icon-128.png"
  },
  "web_accessible_resources": [
    "inject.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{B1B09654-8125-48CC-AB09-D7F8BC2BEC0A}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "id": "{B1B09654-8125-48CC-AB09-D7F8BC2BEC0A}"
    }
  }
}
